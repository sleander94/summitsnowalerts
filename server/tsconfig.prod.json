{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false
  },
  "paths": {
    "@repos/*": ["src/repos/*"],
    "@models/*": ["src/models/*"],
    "@shared/*": ["src/shared/*"],
    "@server": ["src/server"],
    "@services/*": ["src/services/*"],
    "@routes/*": ["src/routes/*"]
  },
  "exclude": ["spec", "src/**/*.mock.ts", "src/public/"]
}
